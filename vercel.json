{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist",
        "buildCommand": "npm run build",
        "installCommand": "npm ci"
      }
    }
  ],
  "routes": [
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/index.html" }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Content-Security-Policy",
          "value": "default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; font-src 'self' data:; connect-src 'self' https://trustteams-backend.vercel.app;"
        }
      ]
    }
  ],
  "env": {
    "VITE_API_BASE_URL": "https://trustteams-backend.vercel.app/api",
    "VITE_API_TARGET": "https://trustteams-backend.vercel.app",
    "NODE_ENV": "production"
  }
}


